.jumbotron.text-center
    h2 {{message}}
    #message
        span.error
            | {{ error }}
        span.success
            | {{ success }} {{ time }}

.container-fluid
    form.form-inline(role="form" ng-submit="addNote()")
        fieldset
            legend Add A New Note
            .row
                .form-group.col-xs-12.col-md-2
                    label(for="title") Note Name:
                    input.form-control(required="true" ng-model="title" highlight-matched-text=false select-first-match=false)
                //.form-group.col-xs-12.col-md-2.top-buffer(ng-controller="tagCtrl")
                //    label(for="tags") Tags:
                //    div#tags(auto-complete url="/tags" model="tags")
            .row
                .form-group.col-xs-12.col-md-4
                    label(for="desc") Description:
                    textarea#desc.form-control(ng-model="desc")

                .form-group.col-xs-12.col-md-2
                    label
                        input.form-control(type="checkbox" ng-model="read_only")
                        | &nbsp Read-only

                .form-group.col-xs-6.col-md-2
                    button.form-control Save

    //span(ng-repeat="task in tasks")

table
    thead
        tr
            th.center.header(colspan="8") {{ header }}
        tr
            th.center Title
            th.center Description
            th.center Created
            th.center Updated
            th.center Read Only
            th.center Tags
            th.center Task
            th.center Delete
        tr.task(ng-show="status !== false")
            td.center(colspan="8") {{ status }}
        tr.task(ng-repeat="note in notes")
            td.center {{ note.title }}
            td.center {{ note.desc }}
            td.center(title="{{ note.fCreate }}") {{ note.pCreate }}
            td.center(title="{{ note.fUpdate }}") {{ note.pUpdate }}
            td.center
                input(type="checkbox" ng-checked="note.read_only")
            td.center {{ note.tags }}
            td.center {{ note.task }}
            td.center
                button(data-id="{{ note._id }}") X