.jumbotron.text-center
    h2 {{message}}
    #message
        span.error
            | {{ error }}
        span.success
            | {{ success }} {{ time }}

.container-fluid
    form.form-inline(role="form" ng-submit="addNote()")
        fieldset
            legend Add A New Note
            .row
                .form-group.col-xs-12.col-md-2
                    label(for="title") Note Name:
                    input.form-control(required="true" ng-model="title" highlight-matched-text=false select-first-match=false)
                //.form-group.col-xs-12.col-md-2.top-buffer(ng-controller="tagCtrl")
                    label(for="tags") Tags:
                    div#tags(auto-complete url="/tags" model="tags")
                .form-group.col-xs-12.col-md-1
                   label
                       input.form-control(type="checkbox" ng-model="sticky" title="Sticky note for task: no completion date, will float to top of task. Use for reminders or template for note copying. If using as template, recommended to use read-only to prevent accidental deletion or editing.")
                       | &nbsp Sticky
                .form-group.col-xs-12.col-md-2
                    label(for="date") Completion Date:
                    input#date.form-control(ng-model="date" placeholder="Date (MM/DD/YYYY)")
            .row
                .form-group.col-xs-12.col-md-4
                    label(for="text") Text:
                    br
                    textarea#text.form-control(ng-model="text")
                .form-group.col-xs-12.col-md-3
                    label(for="tasks") Tasks:
                    select#tasks.form-control(ng-init="tasks = taskOptions[0]" ng-model="tasks" ng-options="task.text for task in taskOptions track by task.value")
                .form-group.col-xs-12.col-md-2
                    label
                        input#read_only.form-control(type="checkbox" ng-model="read_only")
                        | &nbsp Read-only

                .form-group.col-xs-6.col-md-2
                    button.form-control Save

    //span(ng-repeat="task in tasks")

table
    thead
        tr
            th.center.header(colspan="8") {{ header }}
        tr
            th.center Title
            th.center Text
            th.center Created
            th.center Completion
            th.center Read Only
            th.center Tags
            th.center Task
            th.center Delete
        tr.task(ng-show="status !== false")
            td.center(colspan="8") {{ status }}
        tr.task(ng-repeat="note in notes" data-id="{{ note._id }}")
            td.center {{ note.title }}
            td.center {{ note.text }}
            td.center(title="{{ note.fCreate }}") {{ note.pCreate }}
            td.center(title="{{ note.fIteration }}") {{ note.pIteration }}
            td.center
                input(type="checkbox" ng-checked="note.read_only")
            td.center {{ note.tags }}
            td.center {{ note.task_title }}
            td.center
                button(data-id="{{ note._id }}" ng-click="deleteNote($index, note._id, note.title)") X