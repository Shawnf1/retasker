.jumbotron.text-center
    h2 {{message}}
    #message
    | {{ error }} {{ success }} {{ time }}

.container-fluid
    form.form-inline(role="form" ng-submit="addTask()")
        fieldset
            legend Add A New Task
            .row
                .form-group.col-xs-12.col-md-2
                    label(for="title") Task Name:
                    input.form-control(required="true" ng-model="title")

                .form-group.col-xs-12.col-md-4
                    label(for="desc") Description:
                    textarea#desc.form-control(ng-model="desc")

                .form-group.col-xs-12.col-md-2
                    label(for="freq") Frequency:
                    select#freq_slct.form-control(ng-init="freqOptions[0]" ng-model="freq" ng-options="o.value as o.text for o in freqOptions track by o.value" required="true")

                .form-group.col-xs-12.col-md-2
                    label(for="start") Start Date:
                    input.form-control(type="date" ng-model="start")
            .row
                .form-group.col-xs-12.col-md-5
                    label(for="reps_slct") Repetitions:
                    select#reps_slct.form-control(ng-init="reps=repOptions[0]" ng-model="reps" ng-options="o.value as o.text for o in repOptions track by o.value")
                    input#reps(placeholder="Repetitions value")

                .form-group.col-xs-12.col-md-2
                    label
                        input.form-control(type="checkbox" ng-model="read_only")
                        | &nbsp Read-only

                .form-group.col-xs-6.col-md-2
                    button.form-control Save

table
    thead
        tr
            th.center.header(colspan="11") {{ header }}
        tr
            th.center Title
            th.center Description
            th.center Frequency
            th.center Created
            th.center Updated
            th.center Started
            th.center Repetitions
            th.center Ended
            th.center Read Only
            th.center Tags
            th.center End
            tr.task(ng-show="status !== false")
                td.center(colspan="12") {{ status }}
        tr.task(ng-repeat="task in tasks")
            td.center {{ task.title }}
            td.center {{ task.desc }}
            td.center {{ task.frequency }}
            td.center(title="{{ task.fCreate }}") {{ task.pCreate }}
            td.center(title="{{ task.fUpdate }}") {{ task.pUpdate }}
            td.center(title="{{ task.fStart }}") {{ task.pStart }}
            td.center {{ task.repetitions }}
            td.center(title="{{ task.fEnd }}") {{ task.pEnd ? task.pEnd : "-" }}
            td.center
                input(type="checkbox" ng-checked="task.read_only")
            td.center {{ task.tags }}
            td.center
                button(data-id="{{ task._id }}") X