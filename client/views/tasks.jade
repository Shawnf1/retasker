                .form-group.col-xs-6.col-md-2
                    button.form-control Save

table
    thead
        tr
            th.center.header(colspan="10") {{ header }}
        tr
            th.center Title
            th.center Description
            th.center Frequency
            th.center Created
            th.center Updated
            th.center Started
            th.center Repetitions
            th.center Ended
            th.center Read Only
            th.center Tags
        tr.task(ng-repeat="task in tasks")
            td.center {{ task.title }}
            td.center {{ task.desc }}
            td.center {{ task.frequency }}
            td.center {{ task.created_on }}
            td.center {{ task.updated_on }}
            td.center {{ task.start_date }}
            td.center {{ task.repetitions }}
            td.center {{ task.ed_date }}
            td.center
                input(type="checkbox" ng-checked="{{ task.read_only }}")
            td.center {{ task.tags }}